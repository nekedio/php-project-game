#!/usr/bin/env php

<?php

define("COUNTSETH", 3); //количество сэтов игры

$autoloadGlob = __DIR__ . '/../../../autoload.php';
$autoloadLoc = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadGlob)) {
    require_once $autoloadGlob;
} else {
    require_once $autoloadLoc;
}

use function BrainGames\Cli\yourName;
use function BrainGames\Cli\helloCalc;
use function BrainGames\Cli\engGame;
use function BrainGames\engine\engineGames;
use function BrainGames\games\calc\runCalc;

helloCalc(); //приветствие игры

$nameUser = yourName(); //запрос имени

$counterSet = 0;
while ($counterSet < COUNTSETH) {
    if (engineGames(runCalc())){
        $counterSet++;
    } else {
    return;
    }
}

engGame($nameUser);